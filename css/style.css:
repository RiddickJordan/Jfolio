@keyframes init_header {
  0% {
    opacity: 1; }
  100% {
    opacity: 0; } }
@keyframes mid_header {
  0% {
    opacity: 0; }
  25% {
    opacity: 1; }
  75% {
    opacity: 1; }
  100% {
    opacity: 0; } }
@keyframes fin_header {
  0% {
    opacity: 0; }
  100% {
    opacity: 1; } }
#about_header_init {
  animation: init_header .2s .2s forwards linear; }

#about_header_mid {
  opacity: 0;
  animation: mid_header .5s .4s forwards linear; }

#about_header_fin {
  opacity: 0;
  animation: fin_header .01s .8s forwards linear; }

